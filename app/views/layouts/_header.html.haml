.navbar.navbar-fixed-top.navbar-inverse
	.navbar-inner
		.container
			%button.btn.btn-navbar.collapsed{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			= link_to image_tag("logo.png", class: "brand"), home_index_path
			.nav-collapse.collapse
				%ul.nav
					= tab_tag('Songs', home_songs_path)
					= tab_tag('Artists', home_artists_path)
					= tab_tag('About Us', home_about_us_path)
			
				.social.pull-right					
					%a.icon-facebook{href: "http://facebook.com"}
					%a.icon-twitter{href: "http://twitter.com"}
					%a.icon-rss{href: "http://rss.com"}
					.input-append
						%input{type:"text", placeholder: "Search"}
						%span.add-on
							%i.icon-search

							
